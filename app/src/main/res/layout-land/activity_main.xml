<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">


            <ua.com.webacademy.beginnerslection15.RequiredEditText
                android:id="@+id/requiredEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:required="true"
                app:layout_constraintRight_toLeftOf="@+id/view6"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <ua.com.webacademy.beginnerslection15.RequiredEditText
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:required="true"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/requiredEditText"
                app:layout_constraintRight_toLeftOf="@+id/view6"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnClick"
        android:text="@string/validate_first"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:onClick="OnClick"
        android:text="@string/validate_all"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ua.com.webacademy.beginnerslection15.MyButton
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_launcher"
        app:text="@string/save"
        android:layout_alignTop="@+id/view5"
        android:layout_toLeftOf="@+id/view5"
        android:layout_toStartOf="@+id/view5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintRight_toLeftOf="@+id/view5"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/buttonOrientation1"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:onClick="OnClick"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonOrientation2"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonOrientation1"
        android:layout_alignBottom="@+id/buttonOrientation1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/buttonOrientation1"
        android:layout_toRightOf="@+id/buttonOrientation1"
        android:onClick="OnClick"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonOrientation1"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/buttonOrientation3"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonOrientation2"
        android:layout_alignBottom="@+id/buttonOrientation2"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/buttonOrientation2"
        android:layout_toRightOf="@+id/buttonOrientation2"
        android:onClick="OnClick"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonOrientation2"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orientation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/buttonOrientation1"
        android:layout_alignBottom="@+id/buttonOrientation1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="@+id/buttonOrientation1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonOrientation1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <ua.com.webacademy.beginnerslection15.StudentView
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view4"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view3" />

    <ua.com.webacademy.beginnerslection15.MyButton
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view3"
        android:layout_toLeftOf="@+id/view3"
        android:layout_toStartOf="@+id/view3"
        app:src="@mipmap/ic_launcher"
        app:text="@string/dialog"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ua.com.webacademy.beginnerslection15.MyButton
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout"
        app:src="@mipmap/ic_launcher"
        app:text="@string/edit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        app:layout_constraintRight_toLeftOf="@+id/view4"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
