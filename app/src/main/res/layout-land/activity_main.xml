<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ua.com.webacademy.beginners.lection13.RequiredEditText
                android:id="@+id/requiredEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:required="true"/>

            <ua.com.webacademy.beginners.lection13.RequiredEditText
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:required="true"/>

            <ua.com.webacademy.beginners.lection13.RequiredEditText
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:required="true"/>
        </LinearLayout>

        <ua.com.webacademy.beginners.lection13.StudentView
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view4"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnClick"
        android:text="@string/validate_first"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:onClick="OnClick"
        android:text="@string/validate_all"/>

    <ua.com.webacademy.beginners.lection13.MyButton
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_launcher"
        app:text="@string/edit"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ua.com.webacademy.beginners.lection13.MyButton
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_launcher"
        app:text="@string/dialog"
        android:layout_alignTop="@+id/view3"
        android:layout_toLeftOf="@+id/view3"
        android:layout_toStartOf="@+id/view3"/>

    <ua.com.webacademy.beginners.lection13.MyButton
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_launcher"
        app:text="@string/save"
        android:layout_alignTop="@+id/view5"
        android:layout_toLeftOf="@+id/view5"
        android:layout_toStartOf="@+id/view5"/>
</RelativeLayout>
